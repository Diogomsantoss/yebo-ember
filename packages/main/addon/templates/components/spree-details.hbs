<form>
  <fieldset>
    <legend>Order Details</legend>
    <div class="row">
      <div class="small-6 columns">
        <h6>Item Total:</h6>
      </div>
      <div class="small-6 columns text-right">
        <h6>{{order.itemTotal}}</h6>
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <h6>Shipping Total:</h6>
      </div>
      <div class="small-6 columns text-right">
        <h6>{{order.shipmentTotal}}</h6>
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <h6>Order Total:</h6>
      </div>
      <div class="small-6 columns text-right">
        <h6>{{order.total}}</h6>
      </div>
    </div>

  </fieldset>
</form>
