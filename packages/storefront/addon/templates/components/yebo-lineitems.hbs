<table>
  <thead>
    <tr>
      <th class="text-center" colspan="2">Produto</th>
      <th class="text-center" width="100">Pre√ßo</th>
      <th class="text-center" width="100">Quantidade</th>
      <th class="text-center" width="100">Total</th>
      {{#if canRemoveItems}}
        <th class="text-center" width="100"></th>
      {{/if}}
    </tr>
  </thead>
  <tbody>
    {{#each lineItems as |lineItem|}}
      <tr class="border">
        <td width="120"><img src={{lineItem.variant.images.firstObject.smallUrl}}></td>
        <td>
          <h5>{{lineItem.variant.name}}</h5>
          <p>{{lineItem.variant.optionsText}}</p>
          <span>{{lineItem.variant.description}}</span>
        </td>
        <td class="text-center">{{lineItem.singleDisplayAmount}}</td>
        <td class="text-center">
          <a {{action 'removeQtyItem' lineItem}}>-</a>
          <span class="quantity-itens">{{lineItem.quantity}}</span>
          <a {{action 'addQtyItem' lineItem}}>+</a>
        </td>
        <td class="text-center">{{lineItem.displayAmount}}</td>
        {{#if canRemoveItems}}
          <td class="text-center">
            <a {{action 'deleteLineItem' lineItem}}>Remove</a>
          </td>
        {{/if}}
      </tr>
    {{/each}}
  </tbody>
</table>
