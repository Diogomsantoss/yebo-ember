<form {{action 'submit' on='submit'}}>
  <fieldset>
    <legend>{{if isSignup 'Sign Up' 'Sign In'}}</legend>

    {{yebo-input value=identification
                  errors=errors.email
                  attributeName="Email"
                  placeholder="Email"}}

    {{yebo-input value=password
                  errors=errors.password
                  type="password"
                  attributeName="Password"
                  placeholder="Password"}}

    {{#if isSignup}}
      {{yebo-input value=passwordConfirmation
                    errors=errors.passwordConfirmation
                    type="password"
                    attributeName="Password Confirmation"
                    placeholder="Password Confirmation"}}
    {{/if}}

    <button type="submit" class="expand">Continue</button>
    <br>

    {{#unless isSignup}}
      <a {{action 'requestToReset'}} class="forgot-password">Forgot password</a>
      <br />
    {{/unless}}

    {{#if isSignup}}
      {{#link-to 'yebo.signin'}}Or sign in here.{{/link-to}}
    {{else}}
      {{#link-to 'yebo.signup'}}Or create a new account.{{/link-to}}
    {{/if}}
  </fieldset>
</form>
