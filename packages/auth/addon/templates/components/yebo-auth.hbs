<form {{action 'submit' on='submit'}}>
  <fieldset>
    <legend>{{if isSignup 'Sign Up' 'Sign In'}}</legend>

    {{yebo-input value=identification
                  errors=errors.email
                  attributeName="Email"
                  placeholder="Email"}}

    {{yebo-input value=password
                  errors=errors.password
                  type="password"
                  attributeName="Senha"
                  placeholder="Senha"}}

    {{#if isSignup}}
      {{yebo-input value=passwordConfirmation
                    errors=errors.passwordConfirmation
                    type="password"
                    attributeName="Confirme sua senha"
                    placeholder="Confirme sua senha"}}
    {{/if}}

    <button type="submit" class="expand">CONTINUAR</button>
    <br>

    {{#unless isSignup}}
      <!-- <a {{action 'requestToReset'}} class="forgot-password">Forgot password</a> -->
      <br />
    {{/unless}}

    {{#if isSignup}}
    {{else}}
    {{/if}}
  </fieldset>
</form>
