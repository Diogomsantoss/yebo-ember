<form {{action 'submit' on='submit'}}>
  <fieldset>
    <legend>{{if isSignup 'Sign Up' 'Sign In'}}</legend>

    {{spree-input value=identification
                  errors=errors.email
                  attributeName="Email"
                  placeholder="Email"}}

    {{spree-input value=password
                  errors=errors.password
                  type="password"
                  attributeName="Password"
                  placeholder="Password"}}
                  
    {{#if isSignup}}
      {{spree-input value=passwordConfirmation
                    errors=errors.passwordConfirmation
                    type="password"
                    attributeName="Password Confirmation"
                    placeholder="Password Confirmation"}}
    {{/if}}
    <button type="submit" class="expand">Continue</button>
    {{#if isSignup}}
      {{#link-to 'spree.signin'}}Or sign in here.{{/link-to}}
    {{else}}
      {{#link-to 'spree.signup'}}Or create a new account.{{/link-to}}
    {{/if}}
  </fieldset>
</form>
